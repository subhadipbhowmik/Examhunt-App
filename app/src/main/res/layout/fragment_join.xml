<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    tools:context=".JoinFragment">

    <!--    all items-->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="10"
        android:columnCount="1">

        <!--Logo Identity -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/white"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                   android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:src="@drawable/examhunt_medium_logo"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="@string/examhunt_about"
                    android:fontFamily="@font/kalpurush"
                    android:textStyle="bold"
                    android:gravity="center"
                    />

                <Button
                    android:id="@+id/examhuntAboutBtn"
                    style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:text="About Examhunt"
                    app:icon="@drawable/ic_view_site"
                    app:iconGravity="end" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- About Me -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/white"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"

                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/shubhadip_bhowmik"/>

                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/developer"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"
                android:gravity="center"
                />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="@string/my_quote"
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"
                    android:gravity="center"
                    />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:layout_marginTop="15dp"
                   android:layout_marginBottom="15dp"
                   android:orientation="horizontal">

                 <ImageView
                     android:id="@+id/linkedinIcon"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:padding="15dp"
                     android:src="@drawable/linkedin_32"
                     />

                   <ImageView
                       android:id="@+id/gitHubIcon"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:padding="15dp"
                       android:src="@drawable/github_32"
                       />
                   <ImageView
                       android:id="@+id/mediumIcon"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:padding="15dp"
                       android:src="@drawable/medium_32"
                       />
                   <ImageView
                       android:id="@+id/devToIcon"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:padding="15dp"
                       android:src="@drawable/dev_32"
                       />
                   <ImageView
                       android:id="@+id/youTubeIcon"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:padding="15dp"
                       android:src="@drawable/youtube_32"
                       />

                   <ImageView
                       android:id="@+id/gmailIcon"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:padding="15dp"
                       android:src="@drawable/gmail_32"
                       />

               </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <!-- Whatsapp-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/white"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="90dp"
                    android:src="@drawable/ic_join_wa"/>

                <Button
                    android:id="@+id/join_whatsapp_btn"
                    style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Join Group"
                    app:icon="@drawable/ic_join_wa"
                    app:iconGravity="end" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <!-- Website -->

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/white"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="135dp"
                    android:src="@drawable/ic_join_website"/>


                <Button
                    style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                    android:id="@+id/web_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Visit"
                    app:icon="@drawable/ic_view_site"
                    app:iconGravity="end" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Youtube Channel -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/white"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="125dp"
                    android:src="@drawable/ic_join_yt"/>

                <Button
                    android:id="@+id/youtube_btn"
                    style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Videos"
                    app:icon="@drawable/join_lec"

                    app:iconGravity="end" />



            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Donate Us -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/white"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="125dp"
                    android:src="@drawable/ic_join_donate"/>

                <Button
                    android:id="@+id/donate_btn"
                    style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Donate"
                    app:icon="@drawable/ic_join_donate"
                    app:iconGravity="end" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Contact Us -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/white"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="120dp"
                    android:src="@drawable/ic_join_support"/>


                <Button
                    android:id="@+id/support_btn"
                    style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Call Now"
                    app:icon="@drawable/ic_join_support"
                    app:iconGravity="end" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Privacy Policy -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="7"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/white"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="125dp"
                    android:src="@drawable/ic_join_privacy"/>


                <Button
                    android:id="@+id/privacy_btn"
                    style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Privacy"
                    app:icon="@drawable/ic_join_privacy"
                    app:iconGravity="end" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!--Terms and Conditions-->

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="8"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/white"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="125dp"
                    android:src="@drawable/ic_join_toc"/>

                <Button
                    android:id="@+id/toc_btn"
                    style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="T &amp; C"
                    app:icon="@drawable/ic_done"
                    app:iconGravity="end" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </GridLayout>
</ScrollView>